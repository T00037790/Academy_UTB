<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alvaro.academy.MainActivity">


        <EditText
            style="@android:style/Widget.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:hint="Enter name"
            android:ems="10"
            android:inputType="textPersonName"
            android:visibility="visible"
            android:id="@+id/name"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/Stdnt" />

    <Button
        android:id="@+id/Stdnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Student"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/Tchr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher"
        android:layout_alignBaseline="@+id/Stdnt"
        android:layout_alignBottom="@+id/Stdnt"
        android:layout_toEndOf="@+id/Stdnt" />

    <Button
        android:id="@+id/Mngrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Tchr"
        android:layout_toEndOf="@+id/Tchr"
        android:text="Managerial" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/Users"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/Stdnt"
        android:layout_below="@+id/Stdnt"
        android:layout_marginTop="44dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:layout_below="@+id/Stdnt"
        android:layout_alignStart="@+id/name"
        android:layout_marginStart="17dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/name"
        android:text="Post" />

</RelativeLayout>